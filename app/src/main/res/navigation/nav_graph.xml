<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/translateFragment">

    <fragment
        android:id="@+id/translateFragment"
        android:name="com.example.googletranslateapp.translatefragment.TranslateFragment"
        android:label="fragment_translate"
        tools:layout="@layout/fragment_translate" >
        <action
            android:id="@+id/action_translateFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.googletranslateapp.historyfragment.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" >
        <action
            android:id="@+id/action_historyFragment_to_translateFragment"
            app:destination="@id/translateFragment" />
        <action
            android:id="@+id/action_historyFragment_self"
            app:destination="@id/historyFragment" />
    </fragment>
</navigation>